<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Text:</strong>
  <%= @post.text %>
</p>

<h2>Comments</h2>
<center>
  <table>
    <tr>
      <th>Username</th><th>Comment</th><th> Delete Option</th>
    </tr>
  </table>
</center>
<%= render @post.comments %>

<% if current_user %>
<h2>Add a comment:</h2>
<%=  render "comments/form" %>
<%end%>

<%= link_to 'Back', posts_path %>
<% if current_user %>
<%= link_to 'Edit', edit_post_path(@post) %>
<% end %>